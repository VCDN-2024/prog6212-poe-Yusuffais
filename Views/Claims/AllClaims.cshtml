@model IEnumerable<ClaimsSystem.Models.Claim>

@{
    ViewData["Title"] = "All Claims";
}

//all claims
<h1>All Claims</h1>

<table class="table">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>User</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Payment</th>
            <th>Notes</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.User</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalPayment</td>
                <td>@claim.Notes</td>
                @if (claim.Status.Equals("Approved"))
                {
                    <td style="color:green">@claim.Status</td>
                }
                else
                {
                    <td style="color:red">@claim.Status</td>
                }
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="PendingClaims">Go to Pending Claims</a>
</div>

