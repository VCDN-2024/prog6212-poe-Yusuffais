@model ClaimsSystem.Models.Claim

@{
    ViewData["Title"] = "Edit";
}

<h1>Report</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
